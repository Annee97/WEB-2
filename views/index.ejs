<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/style.css"> 
</head>
<body>
    <h1>Lista de Usuarios</h1>
    <a href="/create">➕ Agregar Nuevo Usuario</a> 
    
    <table border="1">
        <thead>
            <tr><th>ID</th><th>Nombre</th><th>Email</th><th>Acciones</th></tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/edit/<%= user.id %>">Editar</a> |
                        <a href="/delete/<%= user.id %>" onclick="return confirm('¿Seguro?');">Borrar</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>